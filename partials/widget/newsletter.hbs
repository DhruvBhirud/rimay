{{#if @labs.subscribers}}
<aside class="newsletter">
    <div class="newsletter-wrap">
        <h5 class="newsletter-title">{{t "Want more stuff like this?"}}</h5>
        <label for="subscribeEmail" class="newsletter-description u-fontSizeSmall u-block">{{t "Get the best viral stories straight into your inbox!"}}</label>

        {{subscribe_form
        form_class="form"
        input_id="subscribeEmail"
        input_class="form-input"
        button_class="button button-black button-primary"
        placeholder=(t "Your email address")
        autofocus=""
        }}
    </div>
</aside>
{{/if}}