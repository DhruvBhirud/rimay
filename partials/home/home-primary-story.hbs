<div class="rimay-paway-left">
    {{#foreach posts limit="1"}}
        <article class="primary-post u-relative">
            <h1 class="primary-post-title"><a href="{{url}}">{{title}}</a></h1>
            {{!-- Meta {primary tag} --}}
            <div class="u-meta">
                <div class="u-meta-byline">
                    {{#if primary_tag}}{{#primary_tag}}<span class="u-meta-tag"><a class="u-colorHoverPrimary u-colorInherit u-relative zindex3" href="{{url}}" aria-label="{{name}}">{{name}}</a></span>{{/primary_tag}}{{/if}}
                </div>
            </div>

            {{!-- Image --}}
            <figure class="primary-post-figure u-relative">
                {{#if feature_image}}
                    <img class="primary-post-img u-absolute0 u-image u-block lazyload"
                        src="{{img_url feature_image size="m"}}"
                        srcset="{{img_url feature_image size="xxs"}}"
                        data-srcset="{{img_url feature_image size="s"}} 300w,{{img_url feature_image size="m"}} 600w"
                        data-sizes="(max-width: 1000px) 400px, 600px"
                        alt="{{title}}"
                    />
                {{else}}
                    <div class="u-absolute0 u-bgCover u-block" style="background-image:url({{asset "images/not-image.jpg"}})"></div>
                {{/if}}
            </figure>
            {{!-- link --}}
            <a href="{{url}}" aria-label="{{title}}" class="u-absolute0 zindex2"></a>
        </article>
    {{/foreach}}
</div>