<div class="content-wrap">
    <div class="content">
        {{!-- Title For Home Page --}}
        {{#is "home"}}<h2 class="rimay-home--title u-fontSize22">{{t "The Latest"}}</h2>{{/is}}
        {{#is "tag"}}<h1 class="rimay--title">{{#tag}}{{name}}{{/tag}}</h1>{{/is}}

        <div class="story-feed">
            <div class="story-feed-content">
                {{!-- story - partials/story/story.hbs --}}
                {{#foreach posts}} {{> "story/story"}} {{/foreach}}
            </div>

            {{!-- Load More - pagination --}}
            <a href="#" class="load-more" aria-label="{{t "Load More"}}"><span class="gradient-text gradient-text--green">{{t "Load More"}}</span></a>
        </div>
    </div>

    {{!-- sidebar - partials/sidebar/sidebar.hbs --}}
    {{> "sidebar/sidebar"}}
</div>